{
  "name": "decentralized-exchange-sc",
  "version": "1.0.4",
  "private": true,
  "homepage": "https://gitlab.com/atixlabs/moc/sc-moc-decentralized-exchange",
  "description": "Suite of smart contracts that implement a Decentralized Exchange",
  "main": "truffle-config.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "rm -rf build && npm run truffle-compile && scripts/test.sh",
    "fast-test": "truffle test",
    "debugtx": "./scripts/debugtx $1",
    "eslint": "eslint ./ --ext .js",
    "eslint-fix": "./node_modules/.bin/eslint ./ --ext .js --fix",
    "truffle-test": "./node_modules/truffle/build/cli.bundled.js test",
    "truffle-contract-size": "./node_modules/truffle/build/cli.bundled.js run contract-size",
    "coverage": "SOLIDITY_COVERAGE=true npm run test",
    "solium": "solium -d contracts/",
    "ganache-cli": "scripts/run_ganache.sh",
    "block-utils": "scripts/mine_blocks.sh",
    "truffle-compile": "truffle compile --all",
    "truffle-migrate-testnet": "cp zos.backup.json zos.json && truffle migrate --network rskTestnet --reset",
    "truffle-migrate-dev": "rm zos.dev-*.json; rm -r build/contracts; truffle migrate --network development --reset",
    "full-test": "npm run eslint && npm run solium && npm run test",
    "pretty-sc": "prettier --write **/*.sol"
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/atixlabs/moc/sc-moc-decentralized-exchange"
  },
  "keywords": [],
  "author": "Atix",
  "license": "ISC",
  "dependencies": {
    "areopagus": "git+https://git@github.com/money-on-chain/Areopagus-Governance.git#v0.3.3",
    "openzeppelin-eth": "2.2.0",
    "openzeppelin-solidity": "2.3.0",
    "partial-execution": "git+ssh://git@github.com:money-on-chain/Partial-Execution-Dex.git",
    "truffle-contract-size": "1.0.0",
    "zos": "2.3.1",
    "zos-lib": "2.3.1"
  },
  "devDependencies": {
    "abi-decoder": "2.0.1",
    "babel-eslint": "10.0.2",
    "bignumber.js": "9.0.0",
    "bn": "1.0.3",
    "bn-chai": "1.0.1",
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "eslint": "6.1.0",
    "eslint-config-airbnb-base": "13.2.0",
    "eslint-config-prettier": "6.0.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-mocha": "6.0.0",
    "eslint-plugin-prettier": "3.1.0",
    "eslint-plugin-promise": "4.2.1",
    "ethlint": "1.2.4",
    "flat": "4.1.0",
    "ganache-cli": "6.5.0",
    "jsonfile": "5.0.0",
    "lodash": "4.17.15",
    "mochawesome": "4.0.1",
    "openzeppelin-test-helpers": "0.4.0",
    "prettier": "1.18.2",
    "prettier-plugin-solidity": "1.0.0-alpha.47",
    "solidity-coverage": "0.6.4",
    "truffle": "5.0.28",
    "truffle-hdwallet-provider": "1.0.14"
  }
}
